<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

      <% if current_user %>

      <div class="col-sm-8">
        <%= form_for [@product, @review], method: "POST" do |form| %>
          <%= form.label :description %><br>
          <%= form.text_area :description %><br>
          <%= form.label :rating %><br>
          <%= form.select :rating, [1, 2, 3, 4, 5] %><br>
          <%= form.submit "Leave Review" %>
        <% end %>
      </div>

      <% end %>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Ratings: </dt>
          <% @product.reviews.reverse.each do |review| %>
            <dd>
            <% (0...review.rating).each do %>
              <span class="fa fa-star checked"></span>
            <% end %>
            <% (review.rating...5).each do %>
              <span class="fa fa-star"></span>
            <% end %>
            </dd>
          <dd><strong><%= review.rating %>/5:</strong> <%= review.description %></dd>
          <% end %>
        </dl>
      </div>



    </div>

  </article>

</section>
